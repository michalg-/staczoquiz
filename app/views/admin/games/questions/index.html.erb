<% content_for(:header) do %>
  <%= game.name %>
<% end %>
<div class="my-8">
  <table class="border-collapse table-auto w-full text-sm shadow">
    <thead class="bg-white">
    <tr>
      <th class="border-b dark:border-slate-600 font-medium p-4 pl-8 text-slate-400 dark:text-slate-200 text-left">Id</th>
      <th class="border-b dark:border-slate-600 font-medium p-4 pl-8 text-slate-400 dark:text-slate-200 text-left">Text</th>
      <th class="border-b dark:border-slate-600 font-medium p-4 pl-8 text-slate-400 dark:text-slate-200 text-left"></th>
    </tr>
    </thead>
    <tbody id="questions" is="turbo-frame" class="bg-white dark:bg-slate-800">
      <%- questions.each do |question| %>
        <%= render 'question', question: %>
      <% end %>
    </tbody>
  </table>
</div>
